= render 'nav_bar'
.container
	.row
		.col-md-2
			= button_to 'Add New Gift', new_gift_path, method: 'get', :class => "btn btn-primary"
			%br
	.row
		.col-md-10
			%table.table.striped
				%thead
					%tr
						%th Name
						%th Description
						%th Price
						%th{colspan: "3"}
				%tbody
					- @gifts.each do |gift|
						%tr
							%td= gift.name
							%td= gift.description
							%td= "$ #{gift.price}"
							%td= link_to 'Show', gift, :class => "btn btn-default"
							%td= link_to 'Edit', edit_gift_path(gift), :class => "btn btn-warning"
							%td= link_to 'Destroy', gift, method: :delete, :class => "btn btn-danger"