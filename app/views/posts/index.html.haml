%table.table.striped
	%thead
		%tr
			%th Title
			%th Message
			%th Due Date
			%th{colspan: "3"}
	%tbody
		- @posts.each do |post|
			%tr
				%td= post.title
				%td= post.message
				%td= post.due_date
				%td.btn.btn-default= link_to 'Show', post
				%td.btn.btn-warning= link_to 'Edit', edit_post_path(post)
				%td.btn.btn-danger= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }