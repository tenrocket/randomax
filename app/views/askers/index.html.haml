= render 'nav_bar'

%table.table.striped
	%thead
		%tr
			%th User_Name
			%th Address
			%th Email
			%th{colspan: "3"}
	%tbody
		- @askers.each do |asker|
			%tr
				%td= asker.user_name
				%td= asker.address
				%td= asker.email
				%td.btn.btn-default= link_to 'Show', asker
				%td.btn.btn-warning= link_to 'Edit', edit_asker_path(asker)
				%td.btn.btn-danger= link_to 'Destroy', asker, method: :delete, data: { confirm: 'Are you sure?' }