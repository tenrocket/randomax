= render 'nav_bar'

.container
	.row
		.col-md-10
			%table.table.striped
				%thead
					%tr
						%th User_Name
						%th Address
						%th Email
						%th{colspan: "3"}
				%tbody
					- @askers.each do |asker|
						%tr
							%td= asker.user_name
							%td= asker.address
							%td= asker.email
							%td= link_to 'Show', asker, :class => "btn btn-default"
							%td= link_to 'Edit', edit_asker_path(asker), :class => "btn btn-warning"
							%td= link_to 'Destroy', asker, method: :delete, :class => "btn btn-danger"